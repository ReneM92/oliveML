    </OutputFile>

    <OutputFile id="tau_dendrite" fileName="tau_dendrite.dat">
        <OutputColumn id="tau_k_dend" quantity="pop/0/cell/1/biophys/membraneProperties/cal_dend/cal/k/tau"/>
        <OutputColumn id="tau_l_dend" quantity="pop/0/cell/1/biophys/membraneProperties/cal_dend/cal/l/tau"/>
        <OutputColumn id="tau_r_dend" quantity="pop/0/cell/1/biophys/membraneProperties/cah_dend/cah/r/tau"/>
        <OutputColumn id="tau_z_dend" quantity="pop/0/cell/1/biophys/membraneProperties/kca_dend/kca/z/tau"/>
        <OutputColumn id="tau_n_dend" quantity="pop/0/cell/1/biophys/membraneProperties/h_dend/h/n/tau"/>
