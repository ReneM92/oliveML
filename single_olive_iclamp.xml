    <OutputFile id="i_dendrite" fileName="i_dendrite.dat">
        <OutputColumn id="iCal_dend" quantity="pop/0/cell/1/biophys/membraneProperties/cal_dend/iDensity"/>
        <OutputColumn id="iCah_dend" quantity="pop/0/cell/1/biophys/membraneProperties/cah_dend/iDensity"/>
        <OutputColumn id="iKca_dend" quantity="pop/0/cell/1/biophys/membraneProperties/kca_dend/iDensity"/>
        <OutputColumn id="iH_dend" quantity="pop/0/cell/1/biophys/membraneProperties/h_dend/iDensity"/>
        <OutputColumn id="iLeak_dend" quantity="pop/0/cell/1/biophys/membraneProperties/leak_all/iDensity"/>
    </OutputFile>

    <OutputFile id="i_soma" fileName="i_soma.dat">
        <OutputColumn id="iNa_soma" quantity="pop/0/cell/0/biophys/membraneProperties/na_s_soma/iDensity"/>
        <OutputColumn id="iKdr_soma" quantity="pop/0/cell/0/biophys/membraneProperties/kdr_soma/iDensity"/>
        <OutputColumn id="iK_soma" quantity="pop/0/cell/0/biophys/membraneProperties/k_soma/iDensity"/>
        <OutputColumn id="iLeak_soma" quantity="pop/0/cell/0/biophys/membraneProperties/leak_all/iDensity"/>
    </OutputFile>

    <OutputFile id="i_axon" fileName="i_axon.dat">
        <OutputColumn id="iNa_axon" quantity="pop/0/cell/2/biophys/membraneProperties/na_axon/iDensity"/>
